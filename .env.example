# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
# Alternative: VITE_STRIPE_SECRET_KEY=sk_test_...

# Admin Authentication (optional, defaults to admin/admin)
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=admin

# Email Configuration (Resend API)
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_...
# Alternative: VITE_RESEND_API_KEY=re_...

# Email Addresses
ADMIN_EMAIL=admin@example.com
# Alternative: VITE_ADMIN_EMAIL=admin@example.com

SMTP_FROM=noreply@example.com
# Alternative: VITE_SMTP_FROM=noreply@example.com

# API URL (optional, defaults to relative paths)
# VITE_API_URL=/api
